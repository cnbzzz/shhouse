<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jufangbao.house.shhouse.mapper.TResHlayoutMapper">
  <resultMap id="BaseResultMap" type="cn.jufangbao.house.shhouse.model.TResHlayout">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="oid" jdbcType="VARCHAR" property="oid" />
    <result column="coid" jdbcType="VARCHAR" property="coid" />
    <result column="boid" jdbcType="VARCHAR" property="boid" />
    <result column="hlayout" jdbcType="VARCHAR" property="hlayout" />
    <result column="hlipath" jdbcType="VARCHAR" property="hlipath" />
