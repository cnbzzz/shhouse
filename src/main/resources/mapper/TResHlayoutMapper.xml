  </resultMap>

  <select id="getHlipathByHoid" parameterType="String" resultType="String">
    SELECT
        t1.hlipath
    FROM
        t_res_hlayout t1,
        t_res_house t2
    WHERE
        t1.coid = t2.coid
    AND t1.hlayout = t2.hlayout
    AND t1.`status` = 1
    AND t2.oid = #{hoid}
    LIMIT 1
  </select>
